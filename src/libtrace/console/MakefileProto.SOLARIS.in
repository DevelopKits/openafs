srcdir=@srcdir@
include @TOP_OBJDIR@/src/config/Makefile.config


<all>
LIBTRACE_BUILD_LIBS = archive shlib
LIBTRACE_BUILD_THREADS = pthread
LIBTRACE_DEFAULT_THREADS = pthread

LIBTRACE_MAPFILE = $(LIBTRACE_RULE_DIR)/mapfile

# Name of directory to hold object files and libraries.
<sun4x_55 sun4x_56 sunx86_57 sunx86_58 sunx86_59>
LIBTRACE_BUILD_BITS = 32
LIBTRACE_DEFAULT_BITS = 32
<all -sun4x_55 -sun4x_56 -sunx86_57 -sunx86_58 -sunx86_59>
LIBTRACE_BUILD_BITS = 32 64
LIBTRACE_DEFAULT_BITS = 32

<all>
COMPDIRS = std_compdirs
INSTDIRS = std_instdirs
DESTDIRS = std_destdirs

<all>
include Makefile.common


# override
<sun4x_57 sun4x_58 sun4x_59 sun4x_510 sun4x_511>
LIBTRACE_OS_CFLAGS_libosi_trace_console_64 = -xarch=v9

<sunx86_510 sunx86_511>
LIBTRACE_OS_CFLAGS_libosi_trace_console_64 = -xarch=amd64

<sun4x_510 sun4x_511>
LIBTRACE_OS_CFLAGS_libosi_trace_console_32 = -xarch=v8plus

<sunx86>
LIBTRACE_OS_CFLAGS_libosi_trace_console_32 = -xarch=pentium_pro
