build_recurse: ${RECURSE_DIRS}
	for dir in x ${RECURSE_DIRS} ; \
	do \
		if [ "$${dir}" != "x" ] ; then \
			(cd $$dir && $(MAKE) all) ; \
		fi ; \
	done

depinstall_recurse: ${RECURSE_DIRS}
	for dir in x ${RECURSE_DIRS} ; \
	do \
		if [ "$${dir}" != "x" ] ; then \
			(cd $$dir && $(MAKE) depinstall) ; \
		fi ; \
	done

install_recurse: ${RECURSE_DIRS}
	for dir in x ${RECURSE_DIRS} ; \
	do \
		if [ "$${dir}" != "x" ] ; then \
			(cd $$dir && $(MAKE) install) ; \
