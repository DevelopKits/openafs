srcdir=@srcdir@
include @TOP_OBJDIR@/src/config/Makefile.config
INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_SCRIPT = @INSTALL_SCRIPT@

PUBLICHEADERS = \
	afs.h \
	afs_stats.h \
	exporter.h \
	nfsclient.h \
	unified_afs.h \
	sysctl.h \
	${TRACEPOINT_HDR} \
	$(NULL)

DEPINSTALL_HDR_DIR=${TOP_INCDIR}/afs
INSTALL_HDR_DIR=${DESTDIR}${includedir}/afs
DEST_HDR_DIR=${DEST}/include/afs
include @TOP_OBJDIR@/src/config/Makefile.public-header

TRACEPOINT_TAB = afs_tracepoint.tab
TRACEPOINT_HDR = afs_icl.h afs_tracepoint.h
TRACEPOINT_SRC = afs_icl.c afs_tracepoint.c
TRACEPOINT_OBJ = afs_icl.o afs_tracepoint.o
include @TOP_OBJDIR@/src/trace/table-gen.mk

all: depinstall

afs_trace.h afs_trace.msf: afs_trace.et
	${COMPILE_ET} -v 2 -p ${srcdir} afs_trace.et

unified_afs.c unified_afs.h: unified_afs.et
	$(RM) -f unified_afs.c unified_afs.h
	${COMPILE_ET} -p ${srcdir} unified_afs -h unified_afs

afszcm.cat: afs_trace.msf
	-$(RM) -f afszcm.cat
	case ${SYS_NAME} in \
		sgi_* ) \
			gencat -m afszcm.cat afs_trace.msf ;; \
		sun*_4* ) \
			/usr/etc/gencat afszcm.cat afs_trace.msf ;; \
		*_linux* | *_umlinux* ) \
			gencat --new afszcm.cat afs_trace.msf ;; \
		*_darwin_* ) \
			gencat -new afszcm.cat afs_trace.msf ;; \
		i386_fbsd*) \
			echo No gencat for ${SYS_NAME} ;; \
		* ) \
			gencat afszcm.cat afs_trace.msf ;; \
	esac

depinstall: \
	depinstall_hdrs \
	afszcm.cat \
	AFS_component_version_number.c \
	${TRACEPOINT_SRC} \
	$(NULL)

install: install_hdrs unified_afs.h
	${INSTALL_DATA} ${MKAFS_OSTYPE}/osi_inode.h \
	    ${DESTDIR}${includedir}/afs/osi_inode.h
	case ${SYS_NAME} in \
	    *linux*) \
		${INSTALL_DATA} ${MKAFS_OSTYPE}/osi_vfs.h \
		    ${DESTDIR}${includedir}/afs/osi_vfs.h || true ;;\
	    *) \
		echo No vfs headers to install for ${SYS_NAME} ;; \
	esac

dest: dest_hdrs unified_afs.h
	${INSTALL_DATA} ${MKAFS_OSTYPE}/osi_inode.h ${DEST}/include/afs/osi_inode.h
	case ${SYS_NAME} in \
	    next_mach30 | vax_ul43 | *_darwin* | i386_fbsd*) \
		echo skipping afszcm.cat install for ${SYS_NAME} ;; \
	    *) \
		${INSTALL_DATA} afszcm.cat \
		    ${DEST}/root.client/usr/vice/etc/C/afszcm.cat ;; \
	esac
	case ${SYS_NAME} in \
	    *linux*) \
		${INSTALL_DATA} ${MKAFS_OSTYPE}/osi_vfs.h \
		    ${DEST}/include/afs/osi_vfs.h || true ;;\
	    *) \
		echo No vfs headers to install for ${SYS_NAME};; \
	esac

clean:
	-$(RM) -f *.o core AFS_component_version_number.c afs_trace.h afs_trace.msf afszcm.cat
	-$(RM) -f unified_afs.c unified_afs.h

include ../config/Makefile.version
